{
    "name": "n1215/http-router",
    "description": "A PSR-7 compatible router interface and a PSR-15 RequestHandler implementation for routing.",
    "keywords": [
        "psr-7",
        "psr-15",
        "router"
    ],
    "type": "library",
    "homepage": "https://github.com/n1215/http-router",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "http-interop/http-server-handler": "^1.0.0"
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.4",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "N1215\\Http\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "N1215\\Http\\Router\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage.clover"
        ]
    }
}
